<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Create a new cocktail</h1>
      <%= link_to "Back to all cocktails", root_path %>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.submit "Add cocktail", class: 'my-btn-2' %>
      <% end %>
    </div>
  </div>
</div>
